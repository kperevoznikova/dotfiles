    urgent_workspace  #FF6480 #FF6480 #FFFFFF
    binding_mode      #a8c000 #a8c000 #FFFFFF
    active_workspace  #78A8C0 #78a8c0 #FFFFFF
}   
	tray_output none
	status_command i3blocks
}

